{
  "ConnectionStrings": {
    "DefaultConnection": "DataSource=app.db;Cache=Shared"
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "dont-nod.com",
    "Scopes": {
      "Read": [
        "ToDoList.Read",
        "ToDoList.ReadWrite"
      ],
      "Write": [
        "ToDoList.ReadWrite"
      ]
    },
    "AppPermissions": {
      "Read": [
        "ToDoList.Read.All",
        "ToDoList.ReadWrite.All"
      ],
      "Write": [
        "ToDoList.ReadWrite.All"
      ]
    },
    "ClaimSettings": {
      "ScopeClaimType": "http://schemas.microsoft.com/identity/claims/scope",
      "RoleClaimType": "http://schemas.microsoft.com/ws/2008/06/identity/claims/role"
    },
    "CallbackPath": "/signin-oidc"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}